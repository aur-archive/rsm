post_install() {
    echo -e "\e[7m### PLEASE NOTE ###\e[0m"
    echo "If this is your first time installing rsm, you must either relogin"
    echo "or alternatively run the command"
    echo "source /etc/profile.d/rsm.sh"
    echo "in each terminal window where you require rsm."
    echo -e "\e[7m###################\e[0m"
}
